extends layout

block content
  h1= title
  - var results =[{name:"cricket", hours:"3", players:12},{name:"hockey", hours:"4", players:2},{name:"football", hours:"2", players:7}]
  div(class="container-fluid")
  div(class="row")
   each v,index  in results 
    div(class="col-sm-2" onclick =`buy(${index})`) #{v.name}, #{v.hours}, #{v.players}
     script.
        function buy(a)
        {
            alert(`You purchased Item ${a+1}`)
        }
    