extends layout

block content
  h1= title
  - let result = results;
  - var Sports = [{ name: "cricket", hours: "3", players: 12 },{ name: "hockey", hours: "4", players: 2 },{ name: "football", hours: "2", players: 7 }];
  div(class="container-fluid mt-3")
    div(class="row m-1")
      each result, index in results 
        - let destination = `/sports/update?id=${result._id}`
        div(class="col-sm-2", onclick=`buy(${index})`) #{result.name}, #{result.hours}, #{result.players}
        button.btn(class="btn-primary m1-1", onclick=`dispatch('${destination}')`) Update
      script.
        function buy(a) {
          alert(`You purchased Item ${a + 1}`);
        }

        function dispatch(path) {
          window.location.href = path;
        }
